<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adr.trackingapp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_tracking_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_tracking_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.SplashWelcomeActivity" />
        <activity android:name=".ui.main.RegistrationActivity" />
        <activity android:name=".ui.main.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.HistoryRunningActivity" />

        <service
            android:name=".service.GetLocationService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>

</manifest>